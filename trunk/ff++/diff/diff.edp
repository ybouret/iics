load "iovtk"

border aaa(t=0,1) {x=t;y=0;};
border bbb(t=0,1) {x=1;y=t;};
border ccc(t=0,1) {x=1-t;y=1;};
border ddd(t=0,1) {x=0;y=1-t;};

int  nb = 20;

mesh Th = buildmesh( aaa(nb) + bbb(nb) + ccc(nb) + ddd(nb) );

//plot(Th);

fespace Vh(Th,P2);

Vh u;
real xc=0.5;
real yc=0.5;
real R = 0.1;
real R2 = R^2;

//u=sin(pi*x)*sin(pi*y);
u=( ( (x-xc)^2+(y-yc)^2 ) < R2 ? 1 : 0 );
u=exp(-( ( (x-xc)^2+(y-yc)^2 )/R2));

plot(Th,u);
